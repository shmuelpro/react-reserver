{
  "name": "react-reserver",
  "version": "0.0.0-development",
  "description": "A grid component allowing to block out time slots. Built to visualize reservations in a hotel management system.",
  "author": "shmuelpro",
  "license": "MIT",
  "repository": "shmuelpro/react-reserver",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "release": {
    "branches": [
      "master",
      "1.0.x"
    ]
  },
  "scripts": {
    "build": "microbundle --jsx React.createElement --format modern,cjs",
    "start": "microbundle -w --no-compress --jsx React.createElement --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint . --format tap",
    "test:unit": "cross-env CI=1 react-scripts test -u --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom ",
    "test:codecov": "codecov",
    "test:cov": "set CI=true && react-scripts test -u --env=jsdom --watchAll=false --coverage",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "semantic-release": "semantic-release",
    "commit": "npx git-cz"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.24.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "babel-eslint": "^10.0.3",
    "codecov": "^3.7.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle": "^0.12.3",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-test-renderer": "^16.13.1",
    "semantic-release": "^19.0.3"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/serviceWorker.js",
      "!**/index.js"
    ]
  }
}
